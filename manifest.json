{
    "server": {
        "cache": {
            "engine": "catbox-memory"
        }
    },
    "connections": [
        {
            "port": 15031,
            "labels": ["api"],
            "routes": {
                "cors": {
                    "origin": ["http://localhost:8080"]
                }
            }
        },
        {
            "port": 8080,
            "labels": ["web"]
        }
    ],
    "plugins": {
        "jill": [
            {
                "select": "api"
            }
        ],
        "leblanc": [
            {
                "select": "web",
                "options": {
                    "apiUrl": "http://localhost:15031"
                }
            }
        ]
    }
}